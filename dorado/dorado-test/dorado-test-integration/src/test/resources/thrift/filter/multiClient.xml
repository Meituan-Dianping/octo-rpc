<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="clientProxy1" class="com.meituan.dorado.config.service.spring.ReferenceBean" destroy-method="destroy">
        <property name="serviceInterface" value="com.meituan.dorado.test.thrift.apitwitter.Twitter"/>
        <property name="timeout" value="1000"/>
        <property name="appkey" value="com.meituan.octo.dorado.client"/>
        <property name="remoteAppkey" value="com.meituan.octo.dorado.server"/>
        <property name="directConnAddress" value="localhost:9009"/>
        <property name="clusterPolicy" value="failfast"/>
        <property name="filters">
            <list>
                <bean class="com.meituan.dorado.test.thrift.filter.SpecificFilter"/>
                <bean class="com.meituan.dorado.test.thrift.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>

    <bean id="clientProxy2" class="com.meituan.dorado.config.service.spring.ReferenceBean" destroy-method="destroy">
        <property name="serviceInterface" value="com.meituan.dorado.test.thrift.apitwitter.Twitter"/>
        <property name="timeout" value="1000"/>
        <property name="appkey" value="com.meituan.octo.dorado.client"/>
        <property name="remoteAppkey" value="com.meituan.octo.dorado.server"/>
        <property name="protocol" value="thrift"/>
        <property name="directConnAddress" value="localhost:9009"/>
        <property name="clusterPolicy" value="failfast"/>
        <property name="filters">
            <list>
                <bean class="com.meituan.dorado.test.thrift.filter.CustomFilter1"/>
            </list>
        </property>
    </bean>

    <bean id="clientProxy3" class="com.meituan.dorado.config.service.spring.ReferenceBean" destroy-method="destroy">
        <property name="serviceInterface" value="com.meituan.dorado.test.thrift.apisuite.TestSuite"/>
        <property name="timeout" value="1000"/>
        <property name="appkey" value="com.meituan.octo.dorado.client"/>
        <property name="remoteAppkey" value="com.meituan.octo.dorado.server"/>
        <property name="protocol" value="thrift"/>
        <property name="directConnAddress" value="localhost:9010"/>
        <property name="clusterPolicy" value="failfast"/>
        <property name="filters">
            <list>
                <bean class="com.meituan.dorado.test.thrift.filter.CustomFilter1"/>
                <bean class="com.meituan.dorado.test.thrift.filter.CustomFilter2"/>
            </list>
        </property>
    </bean>

</beans>