<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="serviceProcessor" class="com.meituan.dorado.test.echo.EchoImpl"></bean>

    <bean id="serverPublisher1" class="com.meituan.dorado.config.service.spring.ServiceBean">
        <property name="serviceConfig">
            <bean class="com.meituan.dorado.config.service.ServiceConfig">
                <property name="serviceImpl" ref="serviceProcessor"/> <!-- 实现类 -->
            </bean>
        </property>
        <property name="appkey" value="com.meituan.octo.dorado.server"/>
        <property name="port" value="9001"/> <!-- Server 监听端口 -->
        <property name="registry" value="zookeeper://ip:port"/>      <!-- zookeeper配置 -->
    </bean>

    <bean id="serverPublisher2" class="com.meituan.dorado.config.service.spring.ServiceBean">
        <property name="serviceConfig">
            <bean class="com.meituan.dorado.config.service.ServiceConfig">
                <property name="serviceImpl" ref="serviceProcessor"/> <!-- 实现类 -->
            </bean>
        </property>
        <property name="appkey" value="com.meituan.octo.dorado.server"/>
        <property name="port" value="9002"/> <!-- Server 监听端口 -->
        <property name="registry" value="zookeeper://ip:port"/>      <!-- zookeeper配置 -->
    </bean>

    <bean id="serverPublisher3" class="com.meituan.dorado.config.service.spring.ServiceBean">
        <property name="serviceConfig">
            <bean class="com.meituan.dorado.config.service.ServiceConfig">
                <property name="serviceImpl" ref="serviceProcessor"/> <!-- 实现类 -->
            </bean>
        </property>
        <property name="appkey" value="com.meituan.octo.dorado.server"/>
        <property name="port" value="9003"/> <!-- Server 监听端口 -->
        <property name="registry" value="zookeeper://ip:port"/>      <!-- zookeeper配置 -->
    </bean>

</beans>
